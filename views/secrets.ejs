<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered My Secret!</h1>
    <% if(AllUserSecret.length === 0) { %>
      <h1>No quote submitted yet!</h1>
    <% } %> 
    <% AllUserSecret.map(singleUser => { %>
      <p class="secret-text"> <%= singleUser.userSecret %> </p>
    <% }) %>
    
    <hr>
    
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
